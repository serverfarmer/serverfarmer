/var/log/syslog
{
	rotate 24
	monthly
	missingok
	notifempty
	dateext
	compress
	postrotate
		invoke-rc.d rsyslog reload > /dev/null
	endscript
}

/var/log/mail.info
/var/log/mail.warn
/var/log/mail.err
/var/log/mail.log
/var/log/daemon.log
/var/log/kern.log
/var/log/auth.log
/var/log/user.log
/var/log/lpr.log
/var/log/cron.log
/var/log/debug
/var/log/messages
{
	rotate 24
	monthly
	missingok
	notifempty
	compress
	dateext
	sharedscripts
	postrotate
		invoke-rc.d rsyslog reload > /dev/null
	endscript
}
